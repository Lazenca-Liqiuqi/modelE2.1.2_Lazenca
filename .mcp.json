{
	"mcpServers": {
		"serena": {
            "command": "uvx",
            "args": ["--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server"]
        },
		"repomix": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"repomix",
				"--mcp"
			]
		},
		"shrimp-task-manager": {
			"command": "npx",
        	"args": ["-y", "mcp-shrimp-task-manager"],
			"env": {
				"DATA_DIR": ".shrimp",
				"TEMPLATES_USE": "zh",
				"ENABLE_GUI": "true"
			}
        },
		"context7": {
			"command": "npx",
			"args": ["-y", "@upstash/context7-mcp", "--api-key", "ctx7sk-a06a3bd3-9890-4d94-8579-f63ecbed86ac"]
    	},
		"deepwiki": {
			"type": "http",
			"url": "https://mcp.deepwiki.com/mcp"
		},
		"web-search-prime": {
			"type": "http",
			"url": "https://open.bigmodel.cn/api/mcp/web_search_prime/mcp",
			"headers": {
				"Authorization": "Bearer 4590a0a2f3dd467db0d0ff1082fe3bf7.921hxUeADn6WfVjz"
			}
		},
		"tavily-mcp": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"tavily-mcp@latest"
			],
			"env": {
				"TAVILY_API_KEY": "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"
			}
		},
		"zai-mcp-server": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@z_ai/mcp-server"
			],
			"env": {
				"Z_AI_API_KEY": "4590a0a2f3dd467db0d0ff1082fe3bf7.921hxUeADn6WfVjz",
				"Z_AI_MODE": "ZHIPU"
			}
		},
		"ccusage": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@ccusage/mcp@latest"
			],
			"env": {}
		},
		"browsermcp": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@browsermcp/mcp@latest"
			]
		}
	}
}
